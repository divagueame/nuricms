<div>

    {{ $field := .Field }}

    <label>{{ $field.Name }}</label>

    <div data-field-container>
        {{ if .Values }}
        
            {{ range $i, $value := .Values }}
        
                <div data-field-item>
                    <textarea type="text" name="{{ $field.Alias }}" {{ if $field.IsRequired }}required{{ end }}>{{ $value.Value }}</textarea>
                    
                    {{ if $field.IsList }}
                    <button class="btn" type="button" data-action-add>Add</button>
                    <button class="btn" type="button" data-action-remove>Remove</button>
                    <button class="btn" type="button">=</button>
                    {{ end }}
                </div>
            {{ end }}

        {{ else }}
            <div data-field-item>
                <textarea type="text" name="{{ $field.Alias }}" {{ if $field.IsRequired }}required{{ end }}></textarea>
                
                {{ if $field.IsList }}
                    <button class="btn" type="button" data-action-add>Add</button>
                    <button class="btn" type="button" data-action-remove>Remove</button>
                    <button class="btn" type="button">=</button>
                {{ end }}
            </div>
        {{ end }}
    </div>

</div>