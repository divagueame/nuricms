<div>

    {{ $field := .Field }}

    <label>{{ $field.Name }}</label>

    <div data-field-container>
        {{ if .Values }}
        
            {{ range $i, $value := .Values }}
        
                <div data-field-item>
                    <input type="text" data-field  name="{{ $field.Alias }}" {{ if $field.IsRequired }}required{{ end }} value="{{ $value.Value }}" />
                    
                    {{ if $field.IsList }}
                    <button class="btn" type="button" data-action-add>Add</button>
                    <button class="btn" type="button" data-action-remove>Remove</button>
                    <button class="btn" type="button">=</button>
                    {{ end }}
                </div>
            {{ end }}

        {{ else }}
            <div data-field-item>
                <input type="text" data-field name="{{ $field.Alias }}" {{ if $field.IsRequired }}required{{ end }}/>
                
                {{ if $field.IsList }}
                    <button class="btn" type="button" data-action-add>Add</button>
                    <button class="btn" type="button" data-action-remove>Remove</button>
                    <button class="btn" type="button">=</button>
                {{ end }}
            </div>
        {{ end }}
    </div>

</div>